<p id='notice'><%= notice %></p>

<%= form_tag(root_path, method: :get) do %>
  <%= text_field_tag :term, params[:term] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<h1>Movies</h1>
<table>
  <tbody>
    <tr>
      <th>Titlle</th>
      <th>Content</th>
      <th>Age</th>
      <th>Category</th>
      <th>Quality</th>
      <th>Voice</th>
    </tr>
    <% @movies.each do |movie| %>
      <tr>
          <td><%= movie.title %></td>
          <td><%= movie.content %></td>
          <td><%= movie.age %></td>
          <td><%= movie.category %></td>
          <td><%= movie.quality %></td>
          <td><%= movie.voice %></td>
      </tr>
    <% end %>
  </tbody>
</table>
