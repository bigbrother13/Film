<p id='notice'><%= notice %></p>

<%= simple_form_for :search, url: root_path, method: 'GET' do |f| %>
<%= text_field_tag :search, @seach_term, placeholder: "Search" %>
  <%= f.input :content %>
  <%= f.submit 'Search' %>
<% end %>

<h1>Movies</h1>
<table>
  <tbody>
    <tr>
      <th>Titlle</th>
      <th>Content</th>
      <th>Age</th>
      <th>Category</th>
      <th>Quality</th>
      <th>Voice</th>
    </tr>
    <% Movie.all.each do |movie| %>
      <tr>
          <td><%= movie.title %></td>
          <td><%= movie.content %></td>
          <td><%= movie.age %></td>
          <td><%= movie.category %></td>
          <td><%= movie.quality %></td>
          <td><%= movie.voice %></td>
      </tr>
    <% end %>
  </tbody>
</table>
